package com.assgnment4;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.stream.Stream;

import com.assignment4.Fruit;
import com.assignment4.News;


public class FriutTest {

	public static void main(String[] args) {
		
		List<Fruit> f=new ArrayList<>();
		f.add(new Fruit("Apple", 200, 180, "red"));
		f.add(new Fruit("Banana", 150, 50, "yellow"));
		f.add(new Fruit("Dragon", 260, 400, "pink"));
		f.add(new Fruit("kiwi", 150, 250, "green"));
		f.add(new Fruit("pinapale",170, 300,"orrange"));
		
		lowCaloryFriutsInDescendingOrder(f);
		
		
		
	

	}
	//Display the fruit names of low calories fruits i.e. calories < 100 sorted in descending order of calories.
	public static void lowCaloryFriutsInDescendingOrder(List<Fruit> calories) {
		Stream<Fruit> stream = calories.stream();
		   
		 stream.filter(fruit -> fruit.getCalories() < 100)
		            .sorted((fruit1, fruit2) -> Integer.compare(fruit1.getCalories(), fruit2.getCalories()))
		            .map(fruit -> fruit.getName())
		            .forEach(name -> System.out.println(name));    
	}

}
