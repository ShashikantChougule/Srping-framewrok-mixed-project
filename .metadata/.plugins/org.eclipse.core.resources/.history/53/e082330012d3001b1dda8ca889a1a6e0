package com.healthcare.admincontroller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.healthcare.adminservice.AdminService;
import com.healthcare.adminservice.AdminServiceImpl;
import com.spring.healthcare.entity.Admin;

@RestController
@RequestMapping("/admin")
public class AdminController {

	@Autowired
	AdminService adminService;

	@GetMapping("/getdata/{role}")
	public ResponseEntity findByRole(@PathVariable("role") String role, @RequestBody Admin admin) {

		return ResponseEntity.ok(adminService.findByRole(role));

	}
	
	
	@GetMapping("/getdata/{email}")
	public ResponseEntity findByEmail(@PathVariable("email") String email, @RequestBody Admin admin) {

		return ResponseEntity.ok(adminService.findByEmail(email));

}
	
	@GetMapping("/getdata")
	public ResponseEntity<List<Admin>> findAll(Admin admin){
		return ResponseEntity.ok(adminService.findAll());
		
	}
	
	@PostMapping("/savedata")
	public ResponseEntity saveData(@RequestBody Admin admin) {
		adminService.save(admin);
		return new ResponseEntity<>("Data Saved Successfully",HttpStatus.OK);
	}
	
}