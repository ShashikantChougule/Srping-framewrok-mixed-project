package com.assgnment4;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.stream.Stream;

import com.assignment4.Fruit;
import com.assignment4.News;


public class FriutTest {

	public static void main(String[] args) {
		
		List<Fruit> fruit=new ArrayList<>();
		fruit.add(new Fruit("Apple", 200, 180, "red"));
		fruit.add(new Fruit("Banana", 150, 50, "yellow"));
		fruit.add(new Fruit("Dragon", 260, 400, "pink"));
		fruit.add(new Fruit("kiwi", 150, 250, "green"));
		fruit.add(new Fruit("pinapale",170, 300,"orrange"));
		
		lowCaloryFriutsInDescendingOrder(fruit);
		
		
		
	

	}
	//Display the fruit names of low calories fruits i.e. calories < 100 sorted in descending order of calories.
	public static void lowCaloryFriutsInDescendingOrder(List<Fruit> fruit) {
		Stream<Fruit> stream = fruit.stream();
		   
		 stream.filter(fruits -> fruits.getCalories() < 100)
		            .sorted((fruit2, fruit1) -> Integer.compare(fruit2.getCalories(), fruit1.getCalories()))
		            .map(fruits -> fruits.getName())
		            .forEach(name -> System.out.println(name));    
	}

}
